[% USE HTML %]
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Поиск по maillog</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }
        .search-form {
            margin: 20px 0;
        }
        .search-input {
            padding: 8px;
            width: 300px;
        }
        .submit-button {
            padding: 8px 16px;
        }
        .results {
            margin-top: 20px;
        }
        .message {
            margin: 10px 0;
            padding: 5px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>
<body>
    <h1>Поиск по maillog</h1>
    <form class="search-form" method="GET" action="/search">
        <input type="text" name="address" value="[% HTML.escape(address) %]" placeholder="Enter recipient address" class="search-input" required>
        <input type="submit" value="Найти" class="submit-button">
    </form>
    <div class="results">
        [% IF error %]
            <p style="color: red">[% error %]</p>
        [% END %]
        [% IF message %]
            <p style="color: blue">[% message %]</p>
        [% END %]
        <p style="font-weight: bold">Всего найдено результатов: [% total_count %]</p>
        
        
        [% IF results %]
            [% IF limit_exceeded %]
                <p style="color: orange">показаны толькол первые 100 записей.</p>
            [% END %]
            
            [% FOREACH result IN results %]
                <div class="message">
                    [% result.created %] [% result.str %]
                </div>
            [% END %]
        [% END %]
    </div>
</body>
</html>